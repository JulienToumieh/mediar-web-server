<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mediar</title>
    <script type="importmap"></script>
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mediar.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="navbar-brand nav-brand-title" asp-area="" asp-controller="Home" asp-action="Index">Mediar</a>

            <div class="nav-buttons">
                <a class="nav-link" asp-area="" asp-controller="AlbumList" asp-action="AlbumList">Albums</a>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile" style="margin-top: 12px; margin-right: 26px;">
                        <img src="/icons/user-icon.png" style="width: 60px;" />
                    </a>
                }
                else
                {
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                        Login
                    </a>
                }
            </div>
        </nav>
    </header>
    <div class="container">

        <div class="blur-layer"></div>
        <div class="blur-layer"></div>
        <div class="blur-layer"></div>
        <div class="blur-layer"></div>
        <div class="background-circle" style="top: -400px; left: 85vw;"></div>
        <div class="background-circle" style="top: 75vh; left: -400px;"></div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Mediar
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
